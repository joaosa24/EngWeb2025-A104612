extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h1
          span Students List 
          a.w3-btn.w3-round.w3-grey(href="/alunos/registo") +

      .w3-container
        table.w3-table-all
          tr
            th Id
            th Name 
            th Gitlink 
            th Actions
            
          each aluno in slist 
            tr 
              td= aluno.id
              td 
                a(href="alunos/"+aluno.id)= aluno.name 
              td
                a(href=aluno.gitlink)= aluno.gitlink
              td 
                span [
                a(href="alunos/edit/"+aluno.id) Edit
                span ]
                span [
                a(href="alunos/delete/"+aluno.id) Delete
                span ]