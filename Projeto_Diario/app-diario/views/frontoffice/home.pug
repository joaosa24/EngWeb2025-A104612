extends ../layout

block content
  style.
    .diary-container {
      min-height: 100vh;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      padding: 2rem 0;
    }
    .title-box {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
      box-shadow: 0 8px 32px rgba(0,0,0,0.1);
      padding: 2rem;
      background-color: rgba(255,255,255,0.8);
      backdrop-filter: blur(10px);
    }
    .floating-element {
      animation: float 6s ease-in-out infinite;
      transition: all 0.3s;
    }
    @keyframes float {
      0% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
      100% { transform: translateY(0px); }
    }
    .pulse-button {
      animation: pulse 2s infinite;
      box-shadow: 0 0 0 rgba(0, 150, 136, 0.4);
      transition: all 0.3s;
    }
    .pulse-button:hover {
      animation: none;
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(0, 150, 136, 0.4);
    }
    @keyframes pulse {
      0% { box-shadow: 0 0 0 0 rgba(0, 150, 136, 0.4); }
      70% { box-shadow: 0 0 0 15px rgba(0, 150, 136, 0); }
      100% { box-shadow: 0 0 0 0 rgba(0, 150, 136, 0); }
    }
    .diary-icon {
      font-size: 36px;
      margin: 15px;
    }

  .diary-container.w3-container
    .w3-row
      .w3-col.m2.l3 &nbsp;
      .w3-col.s12.m8.l6
        .title-box.w3-padding-64.w3-center
          i.w3-text-teal.floating-element.diary-icon.fa.fa-book

          h1.w3-text-teal.w3-jumbo O meu eu digital...
          h2.w3-text-dark-grey.w3-large Diário digital de Francisco Jorge
          
          .w3-panel.w3-pale-blue.w3-leftbar.w3-border-teal
            p.w3-opacity "Tenho em mim todos os sonhos do mundo." — Alberto Campos
            
          .w3-container.w3-center(style="margin-top: 40px;")
            button.w3-button.w3-teal.w3-round-xlarge.w3-large.pulse-button(type="button" onclick="window.location.href='/diario'")
              i.fa.fa-pencil.w3-margin-right
              | Entrar no Diário
            
        .w3-container.w3-center.w3-margin-top
          i.fa.fa-star.w3-text-teal.floating-element.w3-margin(style="animation-delay: 0.5s")
          i.fa.fa-heart.w3-text-pink.floating-element.w3-margin(style="animation-delay: 1s")
          i.fa.fa-lightbulb-o.w3-text-amber.floating-element.w3-margin(style="animation-delay: 1.5s")