extends ../layout

block content
  .w3-container.w3-display-middle
    .w3-card-4.w3-round-large.login-card(style="width:400px;")
      header.w3-container.w3-center.w3-round-large.header-gradient
        i.fas.fa-user-circle.user-icon
        h1(style="color: white; font-weight:bold;") Login
      
      form.w3-container(action="/login" method="POST")
        if error
          .w3-panel.w3-pale-red.w3-border
            p= error

        .w3-margin
          label.w3-text-teal
            b Email
          .input-wrapper
            i.fas.fa-envelope.input-icon
            input.w3-input.w3-border.w3-round(type="email" name="email" placeholder="ex: user@email.com" style="color: #737373;" required)

        .w3-margin
          label.w3-text-teal
            b Password
          .input-wrapper
            i.fas.fa-lock.input-icon
            input.w3-input.w3-border.w3-round(type="password" placeholder="*******" style="color: #737373; text-align: left;" name="password" required)
        
        .w3-margin.w3-center
          button.w3-button.w3-teal.w3-round-large.w3-hover-teal.w3-hover-text-white.w3-block.btn-login(type="submit" style="transition: 0.3s; font-weight: bold; color: white;") Login
        
        .w3-margin.w3-center
          p.w3-text-grey - or -
        
        .w3-margin.w3-center
          button.w3-button.w3-round-large.w3-hover-text-white.w3-block.btn-social.btn-facebook(type="button" onclick="window.location.href='/auth/facebook'")
            i.fab.fa-facebook-f
            | Login with Facebook
        
        .w3-margin.w3-center
          button.w3-button.w3-round-large.w3-hover-text-white.w3-block.btn-social.btn-google(type="button" onclick="window.location.href='/auth/google'")
            i.fab.fa-google
            | Login with Google
        
        .w3-margin.w3-center
          p Don't have an account? 
            a.w3-text-teal(href="/register") Register here

  style.
    .login-card {
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
      background: linear-gradient(145deg, #ffffff, #f8f8f8);
      transition: all 0.3s ease-in-out;
    }

    .header-gradient {
      background: linear-gradient(to bottom, #00796b 0%, #70b7a1 100%);
    }
    
    .input-icon {
      position: absolute;
      left: 12px;
      top: 50%;
      transform: translateY(-50%);
      color: #009688;
    }

    .input-wrapper {
      position: relative;
    }

    .input-wrapper input {
      padding-left: 36px;
    }

    .btn-social {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      transition: background-color 0.3s ease, filter 0.3s ease, transform 0.3s ease;
      font-weight: bold;
      color: #ffffff;
    }


    .btn-social i {
      font-size: 1.1em;
    }

    .btn-facebook {
      background: linear-gradient(to right, #3b5998, #4c69ba);
      color: #ffffff;
    }

    .btn-facebook:hover {
      filter: brightness(0.9);
      transform: scale(1.05);
      color: #ffffff;
    }

    .btn-google {
      background: linear-gradient(to right, #db4437, #c23321);
      color: #ffffff;
    }

    .btn-google:hover {
      filter: brightness(0.9);
      transform: scale(1.05);
      color: #fffff !important;
    }

    .btn-login:hover {
      filter: brightness(0.9);
      transform: scale(1.05);
    }

    .user-icon {
      font-size: 48px;
      margin-top: 16px;
      color: #ffffffcc;
    }