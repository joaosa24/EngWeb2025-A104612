extends layout

block content
    .w3-container.w3-padding-0(style="height:100vh;") 
        .w3-card-4.w3-margin-0.w3-round-large.w3-white(style="height:100%; display:flex; flex-direction:column;")
            header.w3-container.w3-blue.w3-center.w3-padding
                h1.w3-xxlarge.w3-text-white Detalhes do Contrato
            .w3-container(style="flex-grow:1; overflow:auto;")
                ul.w3-ul.w3-card-4.w3-margin.w3-round-large
                    each val, key in contrato
                        if key !== '_id'
                            li.w3-padding.w3-border-bottom
                                b.w3-text-dark-gray #{key}:  
                                span.w3-text-indigo #{val}
            .w3-container.w3-padding.w3-center
                a.w3-button.w3-blue.w3-round-large.w3-hover-opacity(href='/') Voltar
