extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Student Form
    
        form.w3-container(method="POST" style="margin: 10px auto")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="_id" required)
                label Name
                input.w3-input.w3-round(type="text" name="nome")
                label Git
                input.w3-input.w3-round(type="text" name="gitlink")
            
            fieldset
                legend TPC
                - for(let i=1; i <= 8; i++)
                    input.w3-check(type="checkbox" name=`tpc${i}`)
                    label= ` TPC${i}`
            br
            button.w3-btn.w3-teal.w3-mb-2(type="submit" style="margin: 5px auto;border-radius: 8px;") Register