extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
          h1
            span #{aluno.nome}
      form.w3-container(method="POST" style="margin: 10px auto")
        fieldset
          legend Metadata
          label Id
          input.w3-input.w3-round(type="text" name="id" readonly value=aluno._id)
          label Nome
          input.w3-input.w3-round(type="text" name="name" value=aluno.nome)
          label Git (link)
          input.w3-input.w3-round(type="text" name="gitlink" value=aluno.gitlink)
        
        fieldset 
          legend TPC
          
          - for(let i=1; i <= 8; i++)
            - const key = `tpc${i}`
            if key in aluno
              input.w3-check(type="checkbox" name=`tpc${i}` checked)
              label TPC#{i}
            else
              input.w3-check(type="checkbox" name=`tpc${i}`)
              label TPC#{i}
        br
        button.w3-btn.w3-teal.w3-mb-2(type="submit" style="margin: 5px auto;border-radius: 8px;") Submit